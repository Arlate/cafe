<% layout('layouts/boilerplate') %>

    <head>
        <link rel="stylesheet" href="./styles.css">
    </head>
    <div id="map" style="width: 100%; height:600px;"></div>
    <div class="container">
        <div class="row">
            <% for (cafe of cafes) { %>
                <div class="col-lg-4 col-md-6">
                    <div class="container mt-3">
                        <div class="card mb-3">
                            <div class="row">
                                <div class="col-12">
                                    <% if (cafe.images.length) {%>
                                        <img src="<%=cafe.images[0].url%>" alt="img" class="img-fluid">
                                        <% } else {%>
                                            <img src="https://res.cloudinary.com/dwszziymi/image/upload/v1670714168/YelpCamp/xin0nhebzed91zkyvwk2.jpg"
                                                alt="img" class="img-fluid" crossorigin="anonymous">
                                            <% } %>
                                </div>
                                <div class="col-12">
                                    <div class="card-body">
                                        <h5 class="card-title" style="font-size: 2rem;">
                                            <%=cafe.title%>
                                        </h5>
                                        <p class="card-text">
                                            <%=cafe.location%>
                                        </p>
                                        <p class="card-text">
                                            <small class="text-muted" id="description">
                                                <%=cafe.description.slice(0,200)%>...
                                            </small>
                                        </p>
                                        <a href="/cafes/<%=cafe.id%>" class="btn">View <%=cafe.title%></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
        </div>
    </div>


    <script>
        const cafes = { features: <%- JSON.stringify(cafes) %> };
        const mapToken = "<%= mapsToken %>";
    </script>
    <script src="/clusterMap.js"></script>