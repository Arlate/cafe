<% layout('layouts/boilerplate') %>

    <head>
        <link rel="stylesheet" href="../../styles.css">
    </head>
    <div class="container">
        <div class="row">
            <h1 class="text-center">Cafe Edit</h1>
            <div class="col-md-6 offset-md-3">
                <form action="/cafes/<%= cafe.id %>?_method=PATCH" method="POST" novalidate class="validated-form"
                    enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label" for="name">Cafe Name</label>
                        <input class="form-control" required type="text" placeholder="" id="name" name="cafe[title]"
                            value="<%= cafe.title  %>">
                        <div class="valid-feedback">Great!</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="city">Location</label>
                        <input class="form-control" required type="text" id="city" placeholder="" name="cafe[location]"
                            value="<%= cafe.location  %>">
                        <div class="valid-feedback">Great!</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="price">Price</label>
                        <div class="input-group">
                            <div class="form-check form-check-inline">
                                <% if (cafe.price=="$" ){ %>
                                    <input class="form-check-input" type="radio" name="cafe[price]" id="inlineRadio1"
                                        value="$" checked>
                                    <% } else {%>
                                        <input class="form-check-input" type="radio" name="cafe[price]"
                                            id="inlineRadio1" value="$">
                                        <% } %>
                                            <label class="form-check-label" for="inlineRadio1">$</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <% if (cafe.price=="$$" ){ %>
                                    <input class="form-check-input" type="radio" name="cafe[price]" id="inlineRadio2"
                                        value="$$" checked>
                                    <% } else {%>
                                        <input class="form-check-input" type="radio" name="cafe[price]"
                                            id="inlineRadio2" value="$$">
                                        <% } %>
                                            <label class="form-check-label" for="inlineRadio2">$$</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <% if (cafe.price=="$$$" ){ %>
                                    <input class="form-check-input" type="radio" name="cafe[price]" id="inlineRadio3"
                                        value="$$$" checked>
                                    <% } else {%>
                                        <input class="form-check-input" type="radio" name="cafe[price]"
                                            id="inlineRadio3" value="$$$">
                                        <% } %>
                                            <label class="form-check-label" for="inlineRadio3">$$$</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <% if (cafe.price=="$$$$" ){ %>
                                    <input class="form-check-input" type="radio" name="cafe[price]" id="inlineRadio4"
                                        value="$$$$" checked>
                                    <% } else {%>
                                        <input class="form-check-input" type="radio" name="cafe[price]"
                                            id="inlineRadio4" value="$$$$">
                                        <% } %>
                                            <label class="form-check-label" for="inlineRadio4">$$$$</label>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="desc">Description</label>
                        <textarea class="form-control" type="text" id="desc" placeholder="city" name="cafe[description]"
                            required><%= cafe.description  %></textarea>
                        <div class="valid-feedback">Great!</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="img">Add Images</label>
                        <input class="form-control" type="file" id="img" placeholder="" name="image"
                            value="<%= cafe.image  %>" multiple>
                        <div class="valid-feedback">Great!</div>
                    </div>
                    <div class="mb-3">
                        <div class="form-label" for="">Delete Images</div>
                        <% cafe.images.forEach(function(img, i) { %>
                            <img src="<%=img.thumbnail%>" class="img-thumbnail" alt="">
                            <div class="form-check-inline px-2">
                                <input type="checkbox" id="img-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                            </div>
                            <label for="img-<%=i%>">Delete?</label>
                            <% }) %>
                    </div>
                    <button class="btn btn-info mb-3">Update</button>
                </form>

            </div>

        </div>
    </div>